{
  "name": "lecture-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run --workspace=@lecture/mobile",
    "server": "npm run --workspace=@lecture/server",
    "dev:mobile": "npm run start --workspace=@lecture/mobile",
    "dev:server": "npm run dev --workspace=@lecture/server",
    "build:server": "npm run build --workspace=@lecture/server",
    "deploy:server": "npm run deploy --workspace=@lecture/server"
  },
  "devDependencies": {
    "typescript": "~5.9.2"
  }
}
