{
  "name": "lecture-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run --workspace=@lecture/mobile",
    "server": "npm run --workspace=@lecture/server",
    "web": "npm run --workspace=@lecture/web-frontend",
    "dev:mobile": "npm run start --workspace=@lecture/mobile",
    "dev:server": "npm run dev --workspace=@lecture/server",
    "dev:web": "npm run dev --workspace=@lecture/web-frontend",
    "build:server": "npm run build --workspace=@lecture/server",
    "build:web": "npm run build --workspace=@lecture/web-frontend",
    "deploy:server": "fly deploy",
    "deploy:web": "bun run --filter=@lecture/web-frontend deploy"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7"
  }
}
