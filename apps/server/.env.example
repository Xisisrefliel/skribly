# Server Configuration
PORT=3000

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=lecture-audio

# Cloudflare D1 Configuration (using REST API)
D1_ACCOUNT_ID=your_account_id
D1_DATABASE_ID=your_database_id
D1_API_TOKEN=your_api_token

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Transcription Provider: 'openai' or 'groq' (default: 'openai')
# OpenAI uses gpt-4o-mini-transcribe, Groq uses whisper-large-v3
TRANSCRIPTION_PROVIDER=openai

# Audio Processing
CHUNK_DURATION_MINUTES=20

# Better Auth Configuration
BETTER_AUTH_SECRET=your_32_character_or_longer_secret_here
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth Configuration
# For iOS native apps, use the iOS client ID (the one from Google Cloud Console for iOS app type)
# The ID token from Google Sign-In SDK has the iOS client ID as the audience
GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
# Web client ID (optional, only needed if you also support web OAuth flow)
GOOGLE_CLIENT_ID=your_web_client_id.apps.googleusercontent.com
# Client secret (from web client, not strictly needed for iOS ID token validation)
GOOGLE_CLIENT_SECRET=your_client_secret
